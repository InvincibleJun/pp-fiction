/*swtich样式-start*/

.wx-switch-input {
  width: 82rpx !important;
  height: 40rpx !important;
}

.wx-switch-input::before {
  width: 80rpx !important;
  height: 36rpx !important;
}

.wx-switch-input::after {
  width: 40rpx !important;
  height: 36rpx !important;
}

.cover {
  width: 200rpx;
  height: 200rpx;
}

.top {
  padding: 20rpx 30rpx;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
}

.top-text {
  display: flex;
  margin-left: 20rpx;
  flex-direction: column;
}

.page {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.page-list {
  margin: 10rpx;
}

.page-active {
  background-color: #ffccff;
  color: #fff;
}

.status{
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.status icon {
  margin-right: 10rpx;
}

.list{
  padding: 20rpx;
}

.list-item {
  margin: 10rpx 0;
  font-size: 32rpx;
}

.bottom{
  height: 20rpx;
}